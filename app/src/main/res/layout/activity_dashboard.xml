<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="@color/navyblue"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="0.5"
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingTop="50dp">
<LinearLayout
    android:id="@+id/laddclient"
    android:background="@drawable/rectangle"
android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="150dp">
    <ImageView
        android:layout_marginTop="-10dp"
        android:background="@drawable/addclient"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
                <TextView

                    android:id="@+id/addclienttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"

                    android:layout_marginRight="20dp"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:text="Add Clients"
                    android:textColor="@color/white"
                    android:textSize="21sp" />
</LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="50dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ldebitcredit"
                    android:background="@drawable/rectangle"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_marginTop="-10dp"
                        android:background="@drawable/addclient"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/debitcredit"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:text="Debit Credit"
android:layout_gravity="center"
                    android:lineSpacingExtra="-5dp"
                    android:gravity="center"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
/>
                </LinearLayout>
            </LinearLayout>
       </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingBottom="50dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lwholelist"
                    android:background="@drawable/rectangle"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:layout_width="150dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_marginTop="-10dp"
                        android:background="@drawable/addclient"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:text="whole Data"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/wholedata"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
/>
                </LinearLayout>
            </LinearLayout>

               <LinearLayout
                android:paddingBottom="50dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                   <LinearLayout
                       android:id="@+id/llogout"
                       android:background="@drawable/rectangle"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_width="150dp"
                       android:layout_height="150dp">
                       <ImageView
                           android:layout_marginTop="-10dp"
                           android:background="@drawable/addclient"
                           android:layout_width="40dp"
                           android:layout_height="40dp"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
 android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="21sp"
                    android:textColor="@color/white"
/>
                   </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>